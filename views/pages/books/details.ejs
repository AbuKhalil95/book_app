<section>
  <ul>
    <% booksArray.forEach(element => { %>
      <li class="card">
        <img src=<%= element.image_url %>>
        <h1><%= element.title %></h1>
        <h2><%= element.author %></h2>
        <p class="descriptionAll"><%= element.description %></p>
        <p class="isbn"><%= element.isbn %></p>
        <p class="genre"><%= element.bookshelf %></p>
        <div class="buttons-container">
          <form action="/" method="GET">
            <button type="submit">Return to Main Menu</button>
          </form>
          <a href="/books/edit/<%= element.id %>" class="button">Edit Book Details</a>
          <a href="/books/delete/<%= element.id %>" class="button">Delete Book</a>
        </div>
      </li>
    <% }) %>
  </ul>
</section>